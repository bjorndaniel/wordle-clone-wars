@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject SignInManager<IdentityUser> SignInManager
<PageTitle>WordleCloneWars</PageTitle>
<div class="cover-container d-flex h-100 mx-auto flex-column">
    <header>
        <NavMenu/>
    </header>
    @Body
    <footer class="mastfoot mt-auto">
        <div class="inner">
            <p>
                <a href="https://github.com/bjorndaniel/wordle-clone-wars" target="_blank">Checkout the code on github</a>
            </p>
        </div>
    </footer>
</div>
<MediaQuery Media="@Breakpoints.SmallDown" @bind-Matches="_isSmall" />
@code{
    private bool _collapseNavMenu = true;
    private bool _isSmall;
    private string? _navMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}